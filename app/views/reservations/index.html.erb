<p id="notice"><%= notice %></p>
<div class="container my-5">
  <h1 class="text-center mb-5">Sus reservas</h1>

  <table>
    <thead>
      <tr>
        <th>Fecha Inicio</th>
        <th>Fecha Fin</th>
        <th>Caba√±a</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= reservation.start_time.strftime('%d-%m-%Y') %></td>
          <td><%= reservation.end_time.strftime('%d-%m-%Y') %></td>
          <td><%= reservation.cabin.name %></td>
          <td><%= link_to 'Destroy', user_reservation_url(current_user.id, reservation.id), 
                  method: :delete, data: { confirm: 'Are you sure?' }, 
                  class:"btn btn-outline-danger text-decoration-none pt-0" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
